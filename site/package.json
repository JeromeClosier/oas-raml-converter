{
  "name": "oas-raml-converter-site",
  "version": "0.1.0",
  "homepage": "https://mulesoft.github.io/api-spec-converter",
  "devDependencies": {
    "babel-preset-latest": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "gh-pages": "^0.12.0",
    "react-scripts": "0.7.0",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "brace": "^0.9.0",
    "react": "^15.3.2",
    "react-ace": "^4.0.0",
    "react-bootstrap": "^0.30.6",
    "react-dom": "^15.3.2",
    "react-fontawesome": "^1.4.0",
    "react-progress-button": "^5.0.1"
  },
  "scripts": {
    "start": "npm run build:bundle && react-scripts start",
    "build": "npm run build:minify && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy": "npm run build && gh-pages -d build",
    "build:bundle": "browserify ./worker-src/converter.js -t babelify -o ./public/build/converter-bundle.js",
    "build:minify": "npm run build:bundle && npm run minify",
    "minify": "uglifyjs ./public/build/converter-bundle.js -mc > ./public/build/converter-bundle.min.js"
  }
}
